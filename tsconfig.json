{
	"ts-node": {
		"swc": true,
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@utilities": ["utilities/index.ts"],
			"@utilities/artisan": ["artisan/utilities/index.ts"],
			"@types": ["types/index.ts"]
		}
	},
	"include": [
		"./types/NodeJS.d.ts",
		"./gulpfile.ts",
		"./scripts/**/*.ts",
		"./artisan/**/*.ts",
		"./utilities/**/*.ts"
	],
	"exclude": ["node_modules", "test/**/*.spec.ts"]
}
