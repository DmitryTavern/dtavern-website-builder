{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "paths": {
      "@shared/*": ["shared/*"],
    }
  },
  "include": [
    "shared",
    "shared/types",
    "packages/*/src/**/*.ts",
    "packages/*/test/**/*.ts", 
  ],
  "exclude": [
    ".vscode",
    "*/*.config.js",
    "node_modules",
    "packages/*/dist",
  ]
}
